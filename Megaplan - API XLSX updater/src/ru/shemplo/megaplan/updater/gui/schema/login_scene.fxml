<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ProgressIndicator?>

<BorderPane 
	xmlns:fx="http://javafx.com/fxml/1"
	fx:id="main_root_pane">
	<center>
		<VBox>
			<HBox
				fx:id="client_form"
				disable="false">
				<TextField
					fx:id="client_login"
					promptText="Login">
					<HBox.margin>
						<Insets
							top="10"
							right="5"
							bottom="5"
							left="5"/> 
					</HBox.margin>
				</TextField>
				<PasswordField
					fx:id="client_password"
					promptText="Password">
					<HBox.margin>
						<Insets
							top="10"
							right="5"
							bottom="5"
							left="5"/> 
					</HBox.margin>
				</PasswordField>
				<TextField
					fx:id="client_host"
					promptText="Client host">
					<HBox.margin>
						<Insets
							top="10"
							right="5"
							bottom="5"
							left="5"/> 
					</HBox.margin>
				</TextField>
				<Button
					fx:id="client_auth"
					text="Auth">
					<HBox.margin>
						<Insets
							top="10"
							right="5"
							bottom="5"
							left="5"/> 
					</HBox.margin>
				</Button>
			</HBox>
			
			<Label
				fx:id="progress_log"
				text="">
				<VBox.margin>
					<Insets
						top="5"
						right="5"
						bottom="5"
						left="5"/>
				</VBox.margin>
			</Label>
		</VBox>
	</center>
	<bottom>
			
	</bottom>
</BorderPane>

